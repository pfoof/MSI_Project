<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="id"
        android:id="@+id/action_id"
        android:background="@color/actionsLogId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/action"
        android:text="action" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/prod"
        android:text="prod"
        android:paddingHorizontal="5dp"
        android:background="@color/actionsLogProd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/name"
        android:text="name"
        android:paddingHorizontal="5dp"
        android:background="@color/actionsLogName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/price"
        android:text="100.00"
        android:paddingHorizontal="5dp"
        android:background="@color/actionsLogPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/quantity"
        android:text="5"
        android:paddingHorizontal="5dp"
        android:background="@color/actionsLogQuantity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>